        const mealPlanContainer = document.getElementById('meal-plan');
        const dayButtons = document.querySelectorAll('.day-btn');

        function displayMeals(dayIndex) {
            const dayData = mealData[dayIndex];
            mealPlanContainer.innerHTML = ''; 

            if (dayData.type === 'info') {
                mealPlanContainer.innerHTML = dayData.content;
            } else {
                const dayTitle = document.createElement('h2');
                dayTitle.className = 'text-3xl font-bold text-center mb-6 text-[#344e41]';
                dayTitle.textContent = dayData.day;
                mealPlanContainer.appendChild(dayTitle);

                const grid = document.createElement('div');
                grid.className = 'grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4';

                dayData.meals.forEach(meal => {
                    const mealCard = `
                        <div class="bg-[#f8f9fa]/60 rounded-lg p-4 flex items-start space-x-4 transition-transform hover:scale-105 duration-300">
                            <span class="text-3xl pt-1">${meal.icon}</span>
                            <div>
                                <h3 class="font-semibold text-lg text-[#588157]">${meal.time}</h3>
                                <p class="text-gray-600">${meal.food}</p>
                            </div>
                        </div>
                    `;
                    grid.innerHTML += mealCard;
                });
                mealPlanContainer.appendChild(grid);
            }
        }

        dayButtons.forEach(button => {
            button.addEventListener('click', () => {
                const dayIndex = button.dataset.day;
                
                dayButtons.forEach(btn => btn.classList.remove('active-day'));
                button.classList.add('active-day');

                displayMeals(dayIndex);
            });
        });

        const guidelinesToggle = document.getElementById('guidelines-toggle');
        const guidelinesContent = document.getElementById('guidelines-content');
        const guidelinesArrow = document.getElementById('guidelines-arrow');

        guidelinesToggle.addEventListener('click', () => {
            guidelinesContent.classList.toggle('hidden');
            guidelinesArrow.classList.toggle('rotate-180');
        });
        
        const nutrientData = {
            'Carboidrati': 45,
            'Proteine': 30,
            'Grassi': 25,
        };

        const ctx = document.getElementById('nutrientChart').getContext('2d');
        const nutrientChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: Object.keys(nutrientData),
                datasets: [{
                    label: 'Macronutrienti',
                    data: Object.values(nutrientData),
                    backgroundColor: [
                        '#588157',
                        '#3a5a40',
                        '#a3b18a',
                    ],
                    borderColor: '#fdfaf6',
                    borderWidth: 4,
                    hoverOffset: 12
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                cutout: '60%',
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            color: '#3a3a3a',
                            font: {
                                size: 14
                            },
                            padding: 20
                        }
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                let label = context.label || '';
                                if (label) {
                                    label += ': ';
                                }
                                if (context.parsed !== null) {
                                    label += context.parsed + '%';
                                }
                                return label;
                            }
                        }
                    }
                }
            }
        });

        // Initial load
        displayMeals(0);
        document.querySelector('.day-btn[data-day="0"]').classList.add('active-day');

    </script>

